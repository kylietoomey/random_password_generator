#instead of using a password string, use a list
password_list = []
for char in range (1, nr_letters + 1):
  password_list.append(random.choice(letters)) #append the list by adding the random choice to it
for char in range (1, nr_symbols + 1):
  password_list.append(random.choice(symbols)) #add random symbols
for char in range (1, nr_numbers + 1):
  password_list.append(random.choice(numbers))
#use the shuffle function
random.shuffle(password_list)
password =""
#change the list back into a string and add it together
for char in password_list:
  password += char
print(f"Your password is {password}.")
                
